  </footer>

  <script>
    // Data halaman (bisa diperluas jadi JSON / ambil dari file eksternal)
    const pages = {
      home: `
        <h2>Welcome</h2>
        <p>Selamat datang di blog pribadi saya. Website ini dibuat untuk keperluan arsip.</p>
      `,
      docs: `
        <h2>Documentation</h2>
		<p>Berisi panduan singkat bagaimana menjalankan proyek ini di perangkat lokal.</p>
		<h2>Story</h2>
		<p>Berisi panduan singkat bagaimana menjalankan proyek ini di perangkat lokal.</p>
		<h2>Experience</h2>
        <p>Berisi panduan singkat bagaimana menjalankan proyek ini di perangkat lokal.</p>
             `,
      about: `
        <h2>About Me</h2>
        <p>Saya seorang pelajar yang mempunyai ketertariikan dengan kesenian, teknologi, dan berbagai pengetahuan yang dibagikan lewat tulisan sederhana.</p>
      `,
      contact: `
        <h2>Contact</h2>
        <p>Email: <a href="mailto:email@example.com">email@example.com</a></p>
        <p>GitHub: <a href="#">github.com/username</a></p>
      `
    };

    function navigate(page) {
      const content = document.getElementById('content');
      content.style.opacity = 0; // animasi fade out
      setTimeout(() => {
        content.innerHTML = pages[page];
        content.style.opacity = 1; // fade in
      }, 300);
    }
  </script>
